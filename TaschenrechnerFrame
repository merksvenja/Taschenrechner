  //Ende Generierter Code 
  
    private void rechnenActionPerformed(java.awt.event.ActionEvent evt) {                                        

        try {
            //Das Ergebnis wird ausgerechnet
            rechner.rechnen(rechnung.getText());
        } catch (NumberFormatException e) {
            System.err.printf("Number Exception");
            return;
        }
        try{
            //Ergebnis in ErgebnisFeld ausgeben
            ergebnis.setText(Double.toString(rechner.getErgebnis()));
            //Ergebnis historisieren
            String[] list = rechner.historisieren(rechnung.getText(), rechner.getErgebnis());
            //Alle bisherigen Rechnungen ausgeben
            historylist.setModel(new javax.swing.AbstractListModel<String>() {
                String[] strings = list;
                public int getSize() { return strings.length; }
                public String getElementAt(int i) { return strings[i]; }
            });
            jScrollPane1.setViewportView(historylist);                  
        } catch (IOException ex) {
            System.err.printf("IOException");
            Logger.getLogger(TaschenrechnerFrame.class.getName()).log(Level.SEVERE, null, ex);
        }       
    }                                       

